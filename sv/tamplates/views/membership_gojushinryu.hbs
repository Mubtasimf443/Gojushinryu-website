<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <meta name="description"
        content="Join GojushinRyu International Martial Arts Organization and enhance your martial arts skills. Explore flexible membership options: annual and monthly plans.">
    <meta name="keywords"
        content="GojushinRyu, Martial Arts Membership, Martial Arts Organization, Annual Membership, Monthly Membership, Traditional Martial Arts, International Martial Arts, Martial Arts Training">
    <meta name="robots" content="index, follow">

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="GojushinRyu International Martial Arts Memberships">
    <meta property="og:description"
        content="Choose between annual and monthly memberships to join GojushinRyu International Martial Arts Organization. Start your martial arts journey today.">
    <meta property="og:image" content="/img/IMG-20240907-WA0026.jpg">
    <meta property="og:url" content="https://gojushinryu.com">
    <meta property="og:type" content="website">
    <title>GojushinRyu International Martial Arts Memberships</title>


    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="GojushinRyu International Martial Arts Memberships">
    <meta name="twitter:description"
        content="Annual and monthly memberships available. Join GojushinRyu International Martial Arts Organization for traditional martial arts training.">
    <meta name="twitter:image" content="/img/IMG-20240907-WA0026.jpg">

     {{>Links}}
    <link rel="stylesheet" href="/css/membership/Applicant-info-form.css">
    <link rel="stylesheet" href="/css/membership/payment-info-form.css">
    <link rel="stylesheet" href="/css/membership/question-info-form.css">
    <link rel='stylesheet' type='text/css' media='screen' href='/css/pages/membership.application.css'>
    <script src="/js/pages/gojusinryu.membership.js" defer></script>
</head>


<body>


    {{>Header}}


    <!-- main -->



    <main>
        <section id="banner">
            <div class="div1">
                <h1>Become a Member</h1>
                <p>
                  Join GojushinRyu International Martial Arts Organization and enhance your martial arts skills. Explore flexible membership options: annual and monthly plans.
                </p>
                <button>
                    <a href="#form-section">
                        Apply
                    </a>
                </button>
            </div>
        </section>

        <section id="heading_section">
            <h2>Give The Membership Information</h2>
            <div class="form_status_div">
                <div class="i-box">
                    <i class="fa-solid fa-clipboard-list"></i>
                </div>
                <hr>
                <div class="i-box">
                    <i class="fa-solid fa-question"></i>
                </div>
                <hr>
                <div class="i-box">
                    <i class="fa-regular fa-credit-card"></i>
                </div>
                <hr>
                <div class="i-box">
                    <i class="fa-solid fa-check"></i>
                </div>


            </div>
        </section>


        <!------------------ Form Section ----------------->


        <section id="form-section">
            <div id="form-box">

                <div {{!-- style="display: none;" --}} id="Applicant-info-form">
                    <h3>Applicant Information </h3>
                    <div class="imgInputBox">
                        <label for="">Your Image</label>
                        <img src="" alt="MemberImage" style="display:none;" id="MemberImage">
                        <input type="file" accept="image/*" name="MemberImageInput" id="inp--MemberImage">
                    </div>
                    <div class="input-box">
                        <label for="inp--f--name">First Name</label>
                        <input value="{{first_name}}" id="inp--f--name" type="text" placeholder="Jone">
                    </div>

                    <div class="input-box">
                        <label for="inp--l--name">last name</label>
                        <input value="{{last_name}}" id="inp--l--name" type="text" placeholder="Doe">
                    </div>


                    <div class="input-box">
                        <label for="inp--email">Personal Email</label>
                        <input value="{{email}}" id="inp--email" type="text" placeholder="JoneDoe@gmail.com">
                    </div>
                    <!-- Date of birth -->
                    <div class="input-box">
                        <label for="inp--dob">date of birth</label>
                        <input id="inp--dob" type="date">
                    </div>

                    <div class="input-box">
                        <label for="inp--num">Personal Number</label>
                        <input id="inp--num" value="{{phone}}" type="Number">
                    </div>

                    <div class="input-box">
                        <label for="inp--Country">Present Address - Country</label>
                        <input value="{{country}}" id="inp--Country" type="text" placeholder="India">
                    </div>

                    <div class="input-box">
                        <label for="inp--City">Present Address - City</label>
                        <input value="{{city}}" id="inp--City" type="text" placeholder="London">
                    </div>

                    <div class="input-box">
                        <label for="inp--District">Present Address - Province</label>
                        <input value="{{district}}" id="inp--District" type="text" placeholder="Chittagong">
                    </div>


                    <div class="input-box">
                        <label for="inp--pcode"> Postal Code</label>
                        <input value="{{postcode}}" id="inp--pcode" type="text" placeholder="5XI 2ZQ 189" maxlength="15">
                    </div>

                    <div class="input-box"> 
                        <label for="inp--dojo-name">Dojo Name</label>
                        <input id="inp--doju-name" value="karate" type="text" placeholder="Karate">
                    </div>
                    <div class="input-box">
                        <label for="inp--Instructor">Instructor</label>
                        <input value="Varun jettly" id="inp--Instructor" type="text" placeholder="Varun Jettly">
                    </div>

                    <span class="roles">
                        Goju Shin Ryu International has my Permission to take my Photograph/video publicly to promote the practice. I
                        understand that images/video may be used in the print brochure, website, and social media. I understand that no
                        Royalty, fee, or other compensation shall become payable to me by reason of such use.
                    </span>
                    <div class="input-box">
                        <label for="inp--signature">Signature</label>
                        <input type="text" name="" id="inp--signature" placeholder="Your Signature">
                    </div>

                    <div id="membership-box">
                        <label>choose Your Membership</label>
                        <span>
                            <label membershipValue="LifeTime" membershipOrganization="gojushinryu"
                                default-membership="true" id="lifetime-membership-box" class="membership">
                                <div>
                                    <b>
                                        LifeTime Membership
                                    </b>
                                    <span>
                                        <sup class="currency">$</sup>
                                        250
                                    </span>
                                </div>
                                <hr>
                                <p>
                                    For the individual joining the association
                                </p>

                                <span>
                                 GojushinRyu International Martial Arts
                                </span>
                            </label>
                            <label membershipValue="Annual" membershipOrganization="gojushinryu"
                                default-membership="false" id="annual-membership-box" class="membership">

                                <div>
                                    <b>
                                        Annual Membership
                                    </b>
                                    <span>
                                        <sup class="currency">$</sup>
                                        75
                                    </span>
                                </div>
                                <hr>
                                <p>
                                    Pay annually for the individual joining the association
                                </p>
                                <span>
                                    GojushinRyu International Martial Arts
                                </span>
                            </label>

                        </span>
                     
                    </div>
                    <div id="applicant-form-btn-div">
                        <button id="applicant-form-btn">
                            Coninue
                        </button>
                    </div>
                </div>


                <div {{!-- style="display: flex;" --}} id="question-info-form">
                    <h2>Please Answer This Qusetion</h2>
                    <div class="column_y_n_question">
                        <label>Your Gender?
                        </label>
                        <span>
                            <div yes-no-div-for="genderValue" yes-no-div-value="Male" class="yes-no-div">
                                <div class="check-div">
                                    <i class="fa-solid fa-check"></i>
                                </div>
                                <span>Male</span>
                            </div>
                            <div yes-no-div-for="genderValue" yes-no-div-value="Female" class="yes-no-div">
                                <div class="check-div">

                                </div>
                                <span>Female</span>
                            </div>
                        </span>
                    </div>
                    <div class="column_y_n_question">
                        <label for="">Are You A previous member?<sup>(if renewing)</sup>
                        </label>
                        <span>

                            <div yes-no-div-for="pre_membership_status_Value" yes-no-div-value="Yes" class="yes-no-div">
                                <div class="check-div">
                                </div>
                                <span>Yes</span>
                            </div>
                            <div yes-no-div-for="pre_membership_status_Value" yes-no-div-value="No" class="yes-no-div">
                                <div class="check-div">
                                    <i class="fa-solid fa-check"></i>

                                </div>
                                <span>No</span>
                            </div>
                        </span>
                    </div>
                    <div class="question-text-div" id="exp-date-box">
                        <label for="exp-date-inp">Expiring Date<sup>(if renewing)</sup> </label>
                        <input type="date" name="" id="membership-exp-date-inp">
                    </div>
                    <div class="question-text-div">
                        <label for="exp-date-inp">Current Grade<sup>(Kyu or Dan grade)</sup> </label>
                        <input type="text" placeholder="CGPA 4.5" id="inp--current-grade">
                    </div>
                    <div class="column_y_n_question">
                        <label>Your Experience?
                        </label>
                        <span>
                            <div yes-no-div-for="experience_value" yes-no-div-value="Junior" class="yes-no-div">
                                <div class="check-div">
                                    <i class="fa-solid fa-check"></i>
                                </div>
                                <span>Junior</span>
                            </div>
                            <div yes-no-div-for="experience_value" yes-no-div-value="Senior" class="yes-no-div">
                                <div class="check-div">

                                </div>
                                <span>Senior</span>
                            </div>
                        </span>
                    </div>
                    <div id="violence-q-box" class="column_y_n_question">
                        <label>
                            Have You ever been Convicted On the Charge Of Violence?
                        </label>
                        <span>
                            <div yes-no-div-for="violance_charge_status_Value" yes-no-div-value="Yes"
                                class="yes-no-div">
                                <div class="check-div">
                                </div>
                                <span>Yes</span>
                            </div>
                            <div yes-no-div-for="violance_charge_status_Value" yes-no-div-value="No" class="yes-no-div">
                                <div class="check-div">
                                    <i class="fa-solid fa-check"></i>
                                </div>
                                <span>No</span>
                            </div>
                        </span>
                    </div>
                    <div id="injury-q-box" class="column_y_n_question">
                        <label>
                            Do you Have any type of permanent Injury or Disability?
                        </label>
                        <span>
                            <div yes-no-div-for="permanent_Injury_status_Value" yes-no-div-value="Yes"
                                class="yes-no-div">
                                <div class="check-div">
                                </div>
                                <span>Yes</span>
                            </div>
                            <div yes-no-div-for="permanent_Injury_status_Value" yes-no-div-value="No"
                                class="yes-no-div">
                                <div class="check-div">
                                    <i class="fa-solid fa-check"></i>
                                </div>
                                <span>No</span>
                            </div>
                        </span>
                    </div>
                    <div display_if_violance_charge_yes style="display: none;" class="question-text-div">
                        <label for="exp-date-inp">Describe your previous violance charge?<sup>(if you Have)</sup>
                        </label>
                        <input type="text" placeholder="Tell your disabillity if you have"
                            id="inp--pr--violance-charge">
                    </div>
                    <div class="question-text-div">
                        <label for="exp-date-inp">Describe your Injury or Disability?<sup>(if you Have)</sup> </label>
                        <input type="text" placeholder="Tell your disabillity if you have" id="inp--pr--disabillity">
                    </div>
                   
                    <div class="question-text-div">
                        <label for="exp-date-inp">Previous Injury or Disabilty? </label>
                        <input type="text" placeholder="Cancer / HIV / Heart Disorder or else..."
                            id="inp--previous-injury">
                    </div>

                    <div id="policy-div-for-checkbox">
                        <input status="off" type="checkbox" name="" id="policy-1-inp">
                        <label for="policy-1-inp">&nbsp;
                            I clearly Understand that Practice of martial arts is entirely At my Risk
                        </label>
                    </div>

                    <div id="policy-div-for-checkbox">
                        <input status="off" type="checkbox" name="" id="policy-2-inp">
                        <label for="policy-2-inp">&nbsp;
                            If accepted by the association , I undertake to abide by the rules and Article of the Goju
                            ryo kyokai including any ammendents that maybe made during my period of membership
                        </label>
                    </div>
                    <div id="q-box-btn-div">
                        <button id="q-box-back-btn">Back</button>
                        <button style="opacity: .65;" id="q-box-cn-btn">Request Membership</button>
                    </div>


                </div>


        
                {{!-- <div class="Success-massage-form" id="Success-massage-form">
                    <h3>Thanks for your Order</h3>
                    <p>
                        You have Ordered The The Membership. You will get a mail for Confirmation
                    </p>
                    <button id="successGotItBtn">Got It</button>
                </div> --}}

            </div>
        </section>

    </main>

    {{>Footer}}
<script>
    
  document.querySelectorAll('input').forEach(function (element) {
    element.addEventListener('input', function (event = new Event('input')) {
      event.target.style.outline = 'none';
    })
  })
</script>
</body>

</html>